<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EntryFragment"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/home_auth_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--    TODO: InsightX logo-->
        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="110dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserratsemibold"
            android:text="@string/app_name"
            android:textAlignment="center"


            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserratsemibold"
            android:text="Predictive Maintenance at ease"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_mail_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_circular_nor"
            android:fontFamily="@font/montserratsemibold"
            android:text="Continue with credentials"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:theme="@style/Theme.InsightX" />


        <LinearLayout
            android:id="@+id/G_home_auth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_circular_nor"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="TODO"

                    android:src="@drawable/google_logo" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="Checkout our site"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/home_no_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="90dp"
            android:gravity="center|bottom">

            <TextView
                android:id="@+id/lev1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:text="Don't have an account?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lev2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/lev1"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:text="Signup"
                android:textColor="@color/blue"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>